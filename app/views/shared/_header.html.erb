<div class="header">
  <div class="title">
    <%= link_to 'Eat Log', root_path, class: "title" %>
  </div>

  <div class="menu-open">
    <div>≡</div>
  </div>
</div>

<div id="menu-side">
<%# ログインしている場合表示 %>
  <% if user_signed_in? %>
    <div class="menu-list">
      <%= link_to '投稿する', new_post_path, class: "menu-list-text" %>
    </div>
    <div class="menu-list">
      <%= link_to 'マイページ', "/users/#{current_user.id}", class: "menu-list-text" %>
    </div>
    <div class="menu-list">
      <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: "menu-list-text" %>
    </div>

<%# ログインしていない場合表示 %>
  <% else %>
    <div class="menu-list">
      <%= link_to 'ログイン', new_user_session_path, class: "menu-list-text" %>
    </div>
    <div class="menu-list">
      <%= link_to '新規登録', new_user_registration_path, class: "menu-list-text" %>
    </div>
  <% end %>

  <div class="menu-list" id="close-menu-button">
    <div class="menu-list-text">閉じる</div>
  </div>
</div>