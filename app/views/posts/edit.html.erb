<%# ===========================
  ヘッダー表示
=========================== %>
<%= render "shared/header" %>


<%# ===========================
  編集画面
=========================== %>
<div class="wrapper">
  <div class="main">

      <div class="pagetitle">投稿の編集</div>
      <%= form_with(model: @post, local: true) do |f| %>
      <div>
        <div class="post-text">写真(必須)</div><%= f.file_field :image, id:"post-image" %>
      </div>
      <div>
        <%= f.collection_select(:mealtime_id, Mealtime.all, :id, :name, {}, {class:"select-box", id:"post-mealtime"}) %>
      </div>
      <div>
        <%= f.text_area :memo, placeholder: "感想やレシピをメモ(任意)", id:"post-memo" %>
      </div>
      <div class="submit">
        <%= f.submit "EDIT" ,class:"submit-text" %>
      </div>
      <% end %>

  </div>
</div>