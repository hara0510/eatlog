<%# ===========================
  ログインフォーム
=========================== %>
<div class="wrapper">
  <div class="main-small">

    <div class="pagetitle">Eatlogにログインする</div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class:"select-box-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"select-box" %>
    </div>

    <div class="field">
      <%= f.label :パスワード, class:"select-box-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"select-box" %>
    </div>

  <% if devise_mapping.rememberable? %>
    <div class="remember-me-field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "remember-me" %>
    </div>
  <% end %><br />

  <div class="submit">
    <%= f.submit "LOGIN" ,class:"submit-text",data: { turbo: false } %>
  </div>
  <% end %>

  </div>
</div>
